<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ProfileAcivity">
    <ImageView
        android:id="@+id/recieverimage"
        android:layout_width="match_parent"
        android:src="@drawable/ic_image"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recievername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="User Name"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/commissioner"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/sendfriendrequest"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/button"
            android:text="send friend request"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/commissioner"
            android:textSize="15sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/canclefriendrequest"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/button"
            android:text="Cancle Friend request"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/commissioner"
            android:textSize="15sp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</RelativeLayout>